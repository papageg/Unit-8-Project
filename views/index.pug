extends layout

block content
    h1 Books
    p
        a.button(href='/books/new') Create New Book
    table
        thead
            tr
            th Title
            th Author
            th Genre
            th Year
            //-The thead above will display in the header of the page the rows title author genre and year
        tbody
            each book in books
                tr
                td 
                    a(href = "/books/" + book.id)= book.title
                td= book.author
                td= book.genre
                td= book.year
        //-The tbody will display all the books in id order from top to bottom in the correct thead catagory



